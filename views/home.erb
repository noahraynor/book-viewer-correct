<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% num = 1 %>
    <% @contents.each do |chapter| %>
      <li class="pure-menu-item">
        <a href="/chapters/<%= num %>" class="pure-menu-link"><%= chapter %></a>
      </li>
      <% num += 1 %>
    <% end %>
  </ul>
</div>